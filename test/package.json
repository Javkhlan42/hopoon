{
  "name": "hope-on-tests",
  "version": "1.0.0",
  "description": "Automated test suite for HopOn carpooling platform",
  "scripts": {
    "test": "npm run test:all",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:security",
    "test:unit": "jest --testPathPatterns=unit --coverage",
    "test:integration": "jest --testPathPatterns=integration --runInBand",
    "test:lifecycle": "jest --testPathPattern=integration/ride-lifecycle --runInBand --verbose",
    "test:lifecycle:all": "jest --testPathPattern='integration/(ride-lifecycle|chat-realtime|sos-safety|payment-rating)' --runInBand --verbose",
    "test:lifecycle:chat": "jest --testPathPattern=integration/chat-realtime --runInBand --verbose",
    "test:lifecycle:sos": "jest --testPathPattern=integration/sos-safety --runInBand --verbose",
    "test:lifecycle:payment": "jest --testPathPattern=integration/payment-rating --runInBand --verbose",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:security": "jest --testPathPatterns=security --runInBand",
    "test:performance": "npm run test:performance:load && npm run test:performance:stress",
    "test:performance:load": "k6 run test/performance/load-test.js",
    "test:performance:stress": "k6 run test/performance/stress-test.js",
    "test:performance:spike": "k6 run test/performance/spike-test.js",
    "test:performance:soak": "k6 run test/performance/soak-test.js",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage --coverageDirectory=coverage",
    "test:ci": "npm run test:unit && npm run test:integration && npm run test:e2e:ci && npm run test:security",
    "test:e2e:ci": "playwright test --reporter=html",
    "pretest": "npm run check:api",
    "check:api": "node scripts/check-api.js",
    "report:coverage": "open coverage/lcov-report/index.html",
    "report:e2e": "playwright show-report"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>"
    ],
    "testMatch": [
      "**/*.spec.ts",
      "!**/e2e/**"
    ],
    "collectCoverageFrom": [
      "**/*.ts",
      "!**/*.spec.ts",
      "!e2e/**",
      "!performance/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    },
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/$1"
    },
    "setupFilesAfterEnv": [
      "<rootDir>/setup.ts"
    ],
    "testTimeout": 30000
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@playwright/test": "^1.40.0",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "@types/supertest": "^6.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "keywords": [
    "testing",
    "jest",
    "playwright",
    "k6",
    "integration-tests",
    "e2e-tests",
    "unit-tests"
  ],
  "author": "HopOn Team",
  "license": "MIT"
}
